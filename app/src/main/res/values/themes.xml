<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.SoftTImer" parent="android:Theme.Material.Light.NoActionBar" >
        <item name="android:windowTranslucentStatus">true</item>

<!--        needed only for number picker-->
        <item name="android:colorControlNormal">@android:color/transparent</item>
        <item name="android:fontFamily">@font/orbitron_semi_bold</item>
        <item name="android:textSize">20.sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="numberPickerStyle" parent="android:Theme.Material.Light.NoActionBar">

        <item name="android:colorAccent">@android:color/holo_red_light</item>
        <!-- To remove divider of the number picker -->
        <item name="android:colorControlNormal">@android:color/holo_red_light</item>

        <item name="android:textColorPrimary">@android:color/holo_red_light</item>
        <item name="android:textSize">30sp</item>
    </style>
</resources>